<script>
    async function share() {
        try {
            const response = await fetch("./goonstreak4.png");
            const blob = await response.blob();
            const file = new File([blob], "goonstreak4.png", { type: blob.type });

            if (navigator.canShare && navigator.canShare({ files: [file] })) {
                await navigator.share({
                    files: [file]
                });
            } else {
                alert("Not supported.");
            }
        } catch (err) {
            console.error("Error:", err);
        }
    }
</script>

